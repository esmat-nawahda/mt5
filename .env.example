# === DeepSeek API ===
LLM_URL=https://api.deepseek.com/v1/chat/completions
LLM_MODEL=deepseek-trader
LLM_API_KEY=sk-your-deepseek-key

# === Trading Pairs (4 fixed) ===
PAIRS=XAUUSD,EURUSD,GBPUSD,BTCUSD

# === Random re-check interval (minutes) ===
MIN_RECHECK_MINUTES=3
MAX_RECHECK_MINUTES=5

# === MetaTrader account (local terminal must be running/logged in) ===
MT5_LOGIN=1234567
MT5_PASSWORD=your_mt5_password
MT5_SERVER=your-broker-server

# === Risk / execution ===
VOLUME=0.10
DEVIATION=30
MIN_CONFIDENCE=78

# === News guard (ForexFactory) ===
TIMEZONE=Europe/Paris
NEWS_BLOCK_BEFORE_MINUTES=60
NEWS_BLOCK_AFTER_MINUTES=60
CLOSE_TRADE_BEFORE_NEWS=false
CLOSE_TRADE_BEFORE_NEWS_MINUTES=10
NEWS_FETCH_INTERVAL_MINUTES=10
